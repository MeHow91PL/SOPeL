@model IEnumerable<SOPeL.Models.Pacjent>

<table class="table table-hover">
    <tr>
        @{
            if (ViewBag.WybierzPacjenta != null && ViewBag.WybierzPacjenta)
            {
                <th>
                    Wybierz
                </th>
            }
        }
        <th>
            @Html.DisplayNameFor(model => model.Pesel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>Akcje</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @{
                if (ViewBag.WybierzPacjenta != null && ViewBag.WybierzPacjenta)
                {
                    <td>
                        <div class="wybierzBtn" data-pacid="@item.ID" data-pacvalue="@item.Pesel | @item.Imie @item.Nazwisko"> <span class="wybierzIcon glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> </div>
                    </td>
                }
            }
            <td>
                @Html.DisplayFor(modelItem => item.Pesel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>

                @Html.ActionLink("Usun", "UsunPacjenta", new { id = item.ID })
            </td>
        </tr>
                }

</table>
