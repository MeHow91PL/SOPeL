<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/index.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/rejestracja")
    @Scripts.Render("~/bundles/terminarz")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")
</head>
<body style="padding: 0">
    <div class="container-fluid">
        <div class="">
            <div class="col-lg-2 col-sm-2 col-md-2 " id="sidebarContainer">
                <div class="sidebar">
                    <div id="zwijaczMenu" onclick="zawijaczKlik()">
                        <span class="glyphicon glyphicon-menu-left"></span>
                        <span class="glyphicon glyphicon-menu-left"></span>
                    </div>
                    <ul class="nav nav-sidebar" id="navPortalPacjenta">
                        <li class="active" id="rejestracjaButtonPortalPacjenta">
                            <a href="#">
                                <img class="img-responsive" src="~/Content/Images/unnamed.png" alt="Alternate Text" />
                                <span>Rejestracja</span>
                            </a>
                        </li>
                        <li id="homeButtonPortalPacjenta">
                            <a href="@Url.Action("Index", "Home")">
                                <img class="img-responsive" src="~/Content/Images/homeIcon.png" alt="Alternate Text" />
                                <span>Strona główna</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="container col-lg-10 col-lg-offset-2 col-sm-10 col-sm-offset-2 col-md-10 col-md-offset-2 main">

                @RenderBody()

            </div>
        </div>
    </div>

    <link href="~/Content/index.css" rel="stylesheet" />
    @RenderSection("scripts", required: false)
</body>
</html>
