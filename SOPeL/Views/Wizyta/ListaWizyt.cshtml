@model List<SOPeL.Models.Wizyta>
@{
    var ajaxOptions = new AjaxOptions
    {
        HttpMethod = "Post",
        InsertionMode = InsertionMode.InsertAfter,
        UpdateTargetId = "kontener-okienek"
    };
}

<ul class="list-group">
    @{ foreach (SOPeL.Models.Wizyta item in Model)
        {

            <li value="@item.Id" class="list-group-item button-historia">

                @Ajax.ActionLink(@item.DataWizyty.ToShortDateString(), "pokazHistorie", "Wizyta", ajaxOptions, new { @data_idwiz = item.Id, @class = "wyswietlHistorie" })
                <div data-idwiz="@item.Id" class="wyswietlHistorie ">@item.DataWizyty.ToShortDateString() </div>
            </li>
        }
    }
</ul>












