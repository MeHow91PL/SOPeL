
@model SOPeL.ViewModels.WizytaViewModel
@{

    ViewBag.Title = "Poczekalnia";
    Layout = "~/Views/_Layout.cshtml";

}



<h2>Poczekalnia</h2>
<div class="container kontenerMaterial">
    <div class="container   col-sm-4 col-xs-10">
        Pracownik:
        <select class="form-control" id="wyborLekarza">
            <option id="0">Wybierz lekarza</option>
            @{
                foreach (var prac in Model.pracownicy)
                {
                    <option id="@prac.ID" data-idlekarza="@prac.ID">@prac.Imie @prac.Nazwisko (@prac.Specjalizacja)</option>
                }
            }
        </select>
    </div>
    <div class="col-lg-1 col-lg-offset-7 col-md-1 col-md-offset-7 col-sm-1 col-sm-offset-7 col-xs-2">
        <a id="opcje-terminarza-button">
            <img src="~/Content/Images/doctorIcon.png" alt="Opcje" class="img-responsive" />
        </a>
    </div>
</div>
<div class="container kontenerMaterial" style="padding:0">
    <div id="kontenerWizyt" >
    @* Treść ładowana AJAXem *@
    @Html.Partial("WizytaPrzychodnia")
</div></div>


<div id="KartaDodawaniaWizyty">
    <div  id="KontenerKartaWizyty" class="wysrodkujCentralnie display-none heighAuto">
     @*Treść ładowana ajaxem z pliku Wizyta.js  ładowana jest _KartaWizyty*@
    </div>
    </div>

<div>
    <div id="HistoriaWizyty" class="wysrodkujCentralnie display-none heighAuto">
        @*Treść ładowana ajaxem z pliku Wizyta.js  ładowana jest _KartaWizytyHistoria*@
    </div>
</div>



@section scripts{
    <script>
        //przekazanie linku do akcji pobierzTerminarz - tutaj bo nie można używać razor w zewnętrznych plikach
        var pobierzTerminarzAjax = '@Url.Action("pobierzTerminarz", "Terminarz")';
    </script>
    @Scripts.Render("~/Scripts/Wizyta")
}
